<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="toolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@android:color/white</item>
    </style>



    <style name="BaseLightTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorWindowsBackground">#FFF5F5F5</item>
        <item name="colorTextHigh">#CC000000</item>
        <item name="colorTextMedium">#77000000</item>
        <item name="colorTextHint">#38000000</item>
        <item name="colorProminent">#000000</item>
        <item name="colorComply">#FFFFFF</item>

        <item name="colorTabTextNormal">#86FFFFFF</item>
        <item name="colorTabTextSelect">#FFFFFFFF</item>

    </style>

    <style name="BaseDarkTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorWindowsBackground">#FF202020</item>
        <item name="colorTextHigh">#85FFFFFF</item>
        <item name="colorTextMedium">#65FFFFFF</item>
        <item name="colorTextHint">#45FFFFFF</item>
        <item name="colorProminent">#FFFFFF</item>
        <item name="colorComply">#000000</item>
        <item name="colorTabTextNormal">#86FFFFFF</item>
        <item name="colorTabTextSelect">#FFFFFFFF</item>


    </style>

    <style name="Theme_Blue" parent="BaseLightTheme">
        <item name="colorPrimary">@color/themeBlue</item>
        <item name="colorPrimaryDark">@color/themeBlue</item>
        <item name="colorAccent">@color/themeBlue</item>
    </style>

    <style name="Theme_Pink" parent="BaseLightTheme">
        <item name="colorPrimary">@color/themePink</item>
        <item name="colorPrimaryDark">@color/themePink</item>
        <item name="colorAccent">@color/themePink</item>
    </style>

